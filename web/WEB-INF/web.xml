<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ParkingRetrievalServlet</servlet-name>
        <servlet-class>Servlets.ParkingRetrievalServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClerkRetrievalServlet</servlet-name>
        <servlet-class>Servlets.ClerkRetrievalServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClerkManagementServlet</servlet-name>
        <servlet-class>Servlets.ClerkManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerManagementServlet</servlet-name>
        <servlet-class>Servlets.CustomerManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginInfo</servlet-name>
        <servlet-class>Servlets.AdminLoginInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParkingRetrievalServlet</servlet-name>
        <url-pattern>/ParkingRetrievalServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClerkRetrievalServlet</servlet-name>
        <url-pattern>/ClerkRetrievalServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClerkManagementServlet</servlet-name>
        <url-pattern>/ClerkManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerManagementServlet</servlet-name>
        <url-pattern>/CustomerManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginInfo</servlet-name>
        <url-pattern>/AdminLoginInfo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
